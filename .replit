entrypoint = "main.py"
modules = ["python-3.11", "web"]

audio = true

[nix]
channel = "stable-25_05"
packages = ["iana-etc", "libev", "libpq", "openssl", "postgresql", "postgresql_14"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["gunicorn", "--worker-class", "geventwebsocket.gunicorn.workers.GeventWebSocketWorker", "--workers", "1", "--bind", "0.0.0.0:$PORT", "--timeout", "120", "--keep-alive", "2", "--preload", "main:app"]
deploymentTarget = "autoscale"
build = ["pip", "install", "-r", "requirements.txt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run TX Engine"
author = 42149299
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TX Server"

[[workflows.workflow]]
name = "TX Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 python main.py"
waitForPort = 5000

[[ports]]
localPort = 808
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
