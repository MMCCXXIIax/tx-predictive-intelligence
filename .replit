entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "gunicorn -w 4 -b 0.0.0.0:5000 main:app"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 10000
externalPort = 9000

[workflows]
runButton = "Run TX Engine"

[[workflows.workflow]]
name = "Run TX Engine"
author = 42149299
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"
