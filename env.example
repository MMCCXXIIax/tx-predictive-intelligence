# ===========================================
# TX PREDICTIVE INTELLIGENCE - ENVIRONMENT VARIABLES
# ===========================================

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-to-a-random-secret-key-in-production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://user:pass@host:5432/dbname
POSTGRES_DB=tx_intelligence
POSTGRES_USER=txuser
POSTGRES_PASSWORD=txpassword
POSTGRES_PORT=5432

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Configuration
CORS_ORIGINS=*

# ===========================================
# API KEYS (Optional - For Enhanced Features)
# ===========================================

# Finnhub API (for news and social sentiment)
# Get free key at: https://finnhub.io/register
FINNHUB_API_KEY=

# NewsAPI (for breaking news)
# Get free key at: https://newsapi.org/register
NEWS_API_KEY=

# Alpha Vantage (for additional market data)
# Get free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=

# Polygon.io (for premium market data)
# Get key at: https://polygon.io/
POLYGON_API_KEY=

# StockTwits (for social sentiment)
STOCKTWITS_API_KEY=

# ===========================================
# MONITORING & ERROR TRACKING (Optional)
# ===========================================

# Sentry (for error tracking)
# Get DSN at: https://sentry.io/
SENTRY_DSN=

# Prometheus (metrics endpoint enabled by default)
PROMETHEUS_ENABLED=true

# ===========================================
# SUPABASE (if using Supabase instead of PostgreSQL)
# ===========================================

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Backend URL (for frontend to connect)
BACKEND_URL=http://localhost:5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable sentiment analysis
SENTIMENT_ANALYSIS_ENABLED=true

# Enable/disable AI Elite mode
AI_ELITE_MODE_ENABLED=true

# Enable/disable backtesting
BACKTESTING_ENABLED=true

# Enable/disable paper trading
PAPER_TRADING_ENABLED=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# RATE LIMITING
# ===========================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# NOTES
# ===========================================
# 1. Copy this file to .env and fill in your values
# 2. Never commit .env to version control
# 3. API keys are optional - system works with free data sources
# 4. For production, use strong SECRET_KEY and DATABASE credentials
